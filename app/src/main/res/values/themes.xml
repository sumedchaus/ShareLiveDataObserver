<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShreeMicrofinDemoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LabelStyle">
        <item name="android:textColor">@color/app_body_text_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/space2dp</item>
        <item name="android:layout_marginBottom">@dimen/space2dp</item>
    </style>

    <style name="LabelStyle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/space2dp</item>
        <item name="android:layout_marginBottom">@dimen/space2dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/space6dp</item>
        <item name="android:paddingEnd">@dimen/space6dp</item>
        <item name="android:paddingTop">@dimen/space6dp</item>
        <item name="android:paddingBottom">@dimen/space6dp</item>
        <item name="android:layout_marginBottom">@dimen/space12dp</item>
    </style>

    <color name="app_body_text_light">#FF607D8B</color>

</resources>